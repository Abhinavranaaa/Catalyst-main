FROM python:3.11-slim

WORKDIR /app

RUN apt-get update && apt-get install -y \
    unzip \
    libpq-dev \
    gcc \
    python3-dev \
    && rm -rf /var/lib/apt/lists/*

COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

RUN mkdir -p /app/nltk_data && \
    python -m nltk.downloader -d /app/nltk_data stopwords punkt wordnet

COPY . .

ARG HF_TOKEN
ARG VECTOR_DB_URL
ARG VECTOR_DB_KEY
ARG QLOO_API_KEY
ARG QLOO_BASE_URL
ARG VAPID_PUBLIC_KEY
ARG VAPID_PRIVATE_KEY
ARG CEREBRAS_API_KEY

ENV HF_TOKEN=${HF_TOKEN}
ENV VECTOR_DB_URL=${VECTOR_DB_URL}
ENV VECTOR_DB_KEY=${VECTOR_DB_KEY}
ENV QLOO_API_KEY=${QLOO_API_KEY}
ENV QLOO_BASE_URL=${QLOO_BASE_URL}
ENV VAPID_PUBLIC_KEY=${VAPID_PUBLIC_KEY}
ENV VAPID_PRIVATE_KEY=${VAPID_PRIVATE_KEY}
ENV CEREBRAS_API_KEY=${CEREBRAS_API_KEY}

ENV NLTK_DATA=/app/nltk_data
ENV PORT=8080

# Debug print secrets right before collectstatic, to verify they're set properly
RUN echo "HF_TOKEN: ${HF_TOKEN:0:10}..." && \
    echo "VECTOR_DB_URL: ${VECTOR_DB_URL:0:10}..." && \
    echo "VAPID_PUBLIC_KEY: ${VAPID_PUBLIC_KEY:0:10}..." && \
    echo "VAPID_PRIVATE_KEY: ${VAPID_PRIVATE_KEY:0:10}..." && \
    python manage.py collectstatic --noinput

CMD ["gunicorn", "catalyst.wsgi:application", "--bind", ":8080", "--timeout", "120"]


